generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Octavia {
  id String @id @default(uuid()) @map("_id")
  name String @unique
  levelMax Int @default(1)
}
model User {
   id  String @id @default(auto()) @map("_id") @db.ObjectId
   user_id String @unique
   blacklist Boolean @default(false)
   rosquinhas Int @default(0)
   last_command DateTime @default(now())
   guilds GuildMember[]
   jobs GuildMemberJobs[]
}
model GuildMemberJobs {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  user_id User @relation(fields: [user], references: [user_id]) 
  guild_id Guild @relation(fields: [guildMember], references: [guild_id])
  guildMember String
  user String
  job_name String @unique
  job_earn Int @default(0)
  job_experience Int @default(0)
  job_experience_max Int  @default(0)
}
model Guild {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  guild_id String @unique
  blacklist Boolean @default(false)
  auxilio Int @default(5000)
  money Int @default(0)
  imposto Int @default(0)
  level Int @default(1)
  membersJobs GuildMemberJobs[]
  members GuildMember[]
}
model GuildMember {
  timers_daily DateTime @default("2020-05-23T10:00:00.000Z")
  timers_work DateTime @default("2020-05-23T10:00:00.000Z")
  job String
  user_id User @relation(fields: [member_id], references: [user_id])
  member_id String
  guild_id Guild @relation(fields: [guildMember], references: [guild_id])
  guildMember String
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  coins Int @default(0)
}